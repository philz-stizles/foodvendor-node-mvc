block content
  main.main.main-pt
    .modal-dialog(role='document')
      .modal-content
        .modal-header.text-center
          .cf2-wrap
            h2 Sign up for a free account!
            .clearfix.space40
            form#signupForm.positioned(autocomplete="off")
              //- .row
              //-   .col-md-6.col-sm-6
              //-     input#senderName(name='senderName' placeholder='Your Name' required='' type='text')
              //-   .col-md-6.col-sm-6
              //-     input#senderEmail(name='senderEmail' placeholder='Email Address' required='' type='email')
              input#username(placeholder='Email Address' required='' type='text')
              input#email(placeholder='Email Address' required='' type='email')
              input#password(placeholder='Password' required='' type='password')
              input#confirmPassword(placeholder='Password' required='' type='password')
              //- input#address(name='address' placeholder='Address' required='' type='text')
              //- input(placeholder='Zip Code' required='' type='number')
              //- input(placeholder='Mobile No.' required='' type='number')
              //- select#select(name='name' required='required')
              //-   option(value='')
              //-     | Rainbow Vegetable Sandwich - $10.50
              //-   option(value='1') Vegetarian Burger - $9.20
              //-   option(value='2')
              //-     | Raspberry Stuffed French Toast - $12.50
              button#signupBtn.btn.btn-primary.btn-ico(type='button', data-type='customer')
                | I am a Customer
                i.fa.fa-paper-plane-o
              button#signupBtn.btn.btn-primary.btn-ico(type='button', data-type='vendor')
                | I am a Vendor
                i.fa.fa-paper-plane-o
            #sendingMessage.statusMessage
              p
                i.fa.fa-spin.fa-cog
                |  Sending your message.
                |                     Please wait...
            #successMessage.successmessage
              p
                span.success-ico
                |  Thanks for sending your
                |                     message! We'll get back to you shortly.
            #failureMessage.errormessage
              p
                span.error-ico
                |  There was a problem sending
                |                     your message. Please try again.
            #incompleteMessage.statusMessage
              p
                i.fa.fa-warning
                |  Please complete all the fields
                |                     in the form before sending.
